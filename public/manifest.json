{
  "manifest_version": 3,

  "name": "Remove YouTube Autoplay",
  "description": "Isn't YouTube autoplay the worst? This removes it",
  "author": "krx",
  "version": "0.1.8",
  "host_permissions": ["http://www.youtube.com/"],

  "content_scripts": [{
    "matches": [
      "*://www.youtube.com/*"
    ],
    "js": [
      "js/disableAutoplay.js"
    ],
    "run_at": "document_end"
  }],

  "action": {
    "default_icon": "img/icon_19.png"
  },

  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  }
}
